---
import GitHub from "./icons/GitHub.astro";
import JavaScript from "./icons/JavaScript.astro";
import Vite from "./icons/Vite.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import TailWind from "./icons/TailWind.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import React from "./icons/React.astro";
import Mongodb from "./icons/Mongodb.astro";
import Node from "./icons/Node.astro";
import Ts from "./icons/Ts.astro";

const TAGS = {
  JS: {
    icon: JavaScript,
  },
  VITE: {
    icon: Vite,
  },
  ASTRO: {
    icon: AstroIcon,
  },
  TAILWIND: {
    icon: TailWind,
  },
  NODE: {
    icon: Node,
  },
  REACT: {
    icon: React,
  },
  MONGODB: {
    icon: Mongodb,
  },
  TS: {
    icon: Ts,
  },
};
const PROJECTS = [
  {
    title: "Marketly",
    description:
      "Plataforma de e-commerce completa construida con Astro, React y MongoDB. Incluye autenticación JWT, gestión de perfiles, carrito de compras con persistencia, filtros avanzados y sistema de reseñas. Destaca por su arquitectura híbrida SSR/SPA y diseño responsive con Tailwind CSS.",
    link: "https://marketly-adrirf7.vercel.app/",
    github: "https://github.com/adrirf7/Marketly",
    imageDark: "/projects/dark/marketly-dark.webp",
    imageLight: "/projects/light/marketly-light.webp",
    tags: [TAGS.TS, TAGS.ASTRO, TAGS.REACT, TAGS.NODE, TAGS.MONGODB],
  },
  {
    title: "TODO List",
    description:
      "Aplicación de lista de tareas con Astro 5, con CRUD completo, filtros, y persistencia en localStorage. Implementa arquitectura modular con separación de responsabilidades y diseño responsive optimizado.",
    link: "https://todo-adrirf7.vercel.app/",
    github: "https://github.com/adrirf7/ToDo-list",
    imageDark: "/projects/dark/todo-dark.webp",
    imageLight: "/projects/light/todo-light.webp",
    tags: [TAGS.JS, TAGS.ASTRO],
  },
  {
    title: "React Shop",
    description: "Carrito de compras con filtros por categoría/precio, gestión de estado con Context API y useReducer, paginación y rutas dinámicas. React 19, React Router, Vite.",
    link: "https://shopping-cart-gy9z.vercel.app/",
    github: "https://github.com/adrirf7/ecommerce-react",
    imageDark: "/projects/dark/react-shop-dark.webp",
    imageLight: "/projects/light/react-shop-light.webp",
    tags: [TAGS.JS, TAGS.REACT],
  },
  {
    title: "BlackJack",
    description: "Juego de BlackJack desarrollado con JavaScript vanilla y Vite, implementando arquitectura modular y buenas prácticas de desarrollo.",
    link: "https://black-jack-adrirf7.vercel.app/",
    github: "https://github.com/adrirf7/BlackJack-adrirf7",
    imageDark: "/projects/dark/black-jack-dark.webp",
    imageLight: "/projects/light/black-jack-light.webp",
    tags: [TAGS.JS, TAGS.VITE],
  },
  {
    title: "Snake Game",
    description:
      "SPA desarrollada con JavaScript vanilla que implementa el juego Snake con controles táctiles para móviles, múltiples tamaños de tablero, sistema de puntuación en tiempo real y temas personalizables",
    link: "https://snake-adrirf7.vercel.app/",
    github: "https://github.com/adrirf7/snake-adrirf7",
    imageDark: "/projects/dark/snake-game-dark.webp",
    imageLight: "/projects/light/snake-game-light.webp",
    tags: [TAGS.JS, TAGS.VITE],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ imageDark, imageLight, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <a href={link} target="_blank" rel="noopener noreferrer" class="w-full h-full">
              <img
                alt={title}
                class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105 dark:hidden cursor-pointer"
                loading="lazy"
                src={imageLight}
              />
              <img
                alt={title}
                class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105 hidden dark:block cursor-pointer"
                loading="lazy"
                src={imageDark}
              />
            </a>
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">{title}</h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span class={`flex gap-x-2 rounded-full text-xs py-1 px-1`}>
                    <tag.icon class="size-5" />
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
